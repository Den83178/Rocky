@model IEnumerable<Rocky.Models.ApplicationType>

<div class="container">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create Applicaton Type
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Edit / Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var obj1 in Model)
                {
                    <tr>

                        <td width="30%">@obj1.Id</td>
                        <td width="40%">@obj1.Name</td>
                        <td width ="100%" class=" btn-group" >
                            <a asp-controller="ApplicationType" asp-route-id_1="@obj1.Id" asp-action="Edit" class="btn btn-success w-100"><i class="fa fa-edit"></i>&nbsp;Edit</a>
                            <a asp-controller="ApplicationType" asp-action="Delete" asp-route-id="@obj1.Id" class="btn btn-danger w-100"><i class="fas fa-trash-alt"></i>&nbsp;Delete</a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            "No model exists!";
        </p>
    }
</div>

